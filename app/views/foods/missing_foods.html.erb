<div class="mf-container">
    <h1>Shopping List</h1>
    <div class="mf-head-values">
      <p>Amount of food items to buy: <%= @total_items %></p>
      <p>Recipe: <%= @missing_foods_from_recipes %></p>
      <p>Inventory: <%= @missing_foods_from_inventory %></p>
      <p>Total value of food needed: <%= number_to_currency(@total_price) %></p>
    </div>

    <table class="mf-table">
        <thead>
            <tr>
              <th class="sortable asc desc">Name</th>
              <th>Quantity</th>
              <th class="sortable asc desc">Price</th>
            </tr>
        </thead>

        <tbody>
            <% @missing_foods.each do |food| %>
            <tr>
                <td><%= food.name %></td>
                <td><%= food.quantity %></td>
                <td><%= number_to_currency(food.price) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>