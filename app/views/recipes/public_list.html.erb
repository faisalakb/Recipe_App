<h1>Public Recipe List</h1>

<ul class="public-recipes">
  <% @public_recipes.each do |recipe| %>
    <li>
      <%= link_to "#{recipe.name} by #{recipe.user.name}", recipe_path(recipe) %>
      <% if can? :destroy, recipe %>
        <%= button_to "Delete", recipe, method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "delete-button" %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Recipes List', recipes_path, class: "btn btn-link" %>
