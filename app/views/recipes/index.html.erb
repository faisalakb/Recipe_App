<div class="main-container">
  <div class="recipes-container">
    <h1 class="page-title">Recipes</h1>
  </div>

  <ul class="recipes">
    <% if @recipes.empty? %>
      <li class="no-recipes">There are no public recipes yet.</li>
    <% else %>
      <% @recipes.each do |recipe| %>
        <%= render partial: 'common_features/recipe', locals: { recipe: recipe, public_list: true } %>
      <% end %>
    <% end %>
  </ul>
</div>
